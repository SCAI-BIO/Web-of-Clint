<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<configuration>
		<appender name="STDOUT"
			class="ch.qos.logback.core.ConsoleAppender">
			<encoder>
				<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{12} - %msg%n</pattern>
			</encoder>
		</appender>

		<root level="info">
			<appender-ref ref="STDOUT" />
		</root>
	</configuration>

